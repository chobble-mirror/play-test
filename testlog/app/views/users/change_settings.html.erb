<header>
  <h1><%= t('users.titles.settings') %></h1>
</header>

<%= form_with(model: @user, url: update_settings_user_path(@user), method: :patch, local: true) do |form| %>
  <%= render 'form/errors', model: @user %>

  <%= render 'form/fieldset', legend_key: 'preferences', i18n_base: 'users.forms', form: form do %>
    <%= render 'form/select', 
        field: :time_display, 
        options: options_for_select([
          [t('users.options.time_full'), "time"],
          [t('users.options.time_day'), "day"]
        ], @user.time_display) %>
  <% end %>

  <%= render 'form/submit_button',
      text: t('users.buttons.update_settings') %>
<% end %>

<div class="margins center">
  <%= link_to change_password_user_path(current_user) do %>
    <strong>Change Password</strong>
  <% end %>
</div>

