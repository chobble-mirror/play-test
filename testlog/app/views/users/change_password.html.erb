<header>
  <h1><%= t('users.titles.change_password') %></h1>
</header>

<%= form_with(model: @user, url: update_password_user_path(@user), method: :patch, local: true) do |form| %>
  <% if @user.errors.any? %>
    <aside>
      <h3><%= pluralize(@user.errors.count, "error") %> prevented your password from being changed:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </aside>
  <% end %>

  <%= form.label :current_password, t('users.forms.password_current') %>
  <%= form.password_field :current_password %>

  <%= form.label :password, t('users.forms.password_new') %>
  <%= form.password_field :password %>

  <%= form.label :password_confirmation, t('users.forms.password_confirmation') %>
  <%= form.password_field :password_confirmation %>

  <%= form.submit t('users.buttons.update_password') %>
<% end %>
