<div class="login">
  <%= form_with(scope: :session, url: login_path) do |form| %>
    <header><h2><%= t('session.login.title') %></h2></header>
    <%= form.label :email, t('session.login.email_label') %>
    <%= form.email_field :email %>

    <%= form.label :password, t('session.login.password_label') %>
    <%= form.password_field :password %>

    <%= form.label :remember_me do %>
      <%= form.check_box :remember_me %>
      <%= t('session.login.remember_me') %>
    <% end %>

    <div style="
      display: flex;
      justify-content: space-between;
    ">
      <%= form.submit t('session.login.submit') %>
    </div>
  <% end %>
</div>
