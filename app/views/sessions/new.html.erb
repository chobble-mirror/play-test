<%= render 'form/form_context', model: nil, i18n_base: 'forms.session_new', url: login_path, scope: :session do |form| %>
  <%= render 'form/fieldset', legend_key: 'credentials' do %>
    <%= render 'form/text_field',
      field: :email,
      type: :email_field,
      required: true
    %>

    <%= render 'form/text_field',
      field: :password,
      type: :password_field,
      required: true
    %>

    <%= render 'form/checkbox',
      field: :remember_me
    %>
  <% end %>
<% end %>
