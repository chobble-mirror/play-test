<%= render 'form/form_context', model: @user, i18n_base: 'forms.user_change_password', url: update_password_user_path(@user), method: :patch do |form| %>
  <%= render 'form/fieldset', legend_key: 'password_change' do %>
    <%= render 'form/text_field', 
        field: :current_password, 
        type: :password_field,
        required: true %>

    <%= render 'form/text_field', 
        field: :password, 
        type: :password_field,
        required: true %>

    <%= render 'form/text_field', 
        field: :password_confirmation, 
        type: :password_field,
        required: true %>
  <% end %>
<% end %>
