<%= render 'shared/page_header', title: t('users.titles.change_password') %>

<%= form_with(model: @user, url: update_password_user_path(@user), method: :patch, local: true) do |form| %>
  <%= render 'form/errors', model: @user %>

  <%= render 'form/fieldset', legend_key: 'password_change', i18n_base: 'users.forms', form: form do %>
    <%= render 'form/text_field', 
        field: :current_password, 
        type: :password_field,
        required: true %>

    <%= render 'form/text_field', 
        field: :password, 
        type: :password_field,
        required: true %>

    <%= render 'form/text_field', 
        field: :password_confirmation, 
        type: :password_field,
        required: true %>
  <% end %>

  <%= render 'form/submit_button',
      text: t('users.buttons.update_password') %>
<% end %>
