<% if object.has_slide? %>
  <%= render 'form/fieldset', form: form, i18n_base: i18n_base, legend_key: 'slide_dimensions' do %>
    <%= render 'form/number_comment', field: :slide_platform_height, min: 0 %>
    <%= render 'form/number_comment', field: :slide_wall_height, min: 0 %>
    <%= render 'form/number_comment', field: :runout_value, min: 0 %>
    <%= render 'form/number_comment', field: :slide_first_metre_height, min: 0 %>
    <%= render 'form/number_comment', field: :slide_beyond_first_metre_height, min: 0 %>
    
    <%= render 'form/checkbox', field: :slide_permanent_roof %>
    <%= render 'form/comment', field: :slide_permanent_roof_comment %>
  <% end %>
<% end %>