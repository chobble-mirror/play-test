<%#
  Safety Info Box Partial

  Parameters:
  - items: Array of info items to display (optional)
  - content: Block for custom content (optional)
%>
<% items = local_assigns.fetch(:items, []) %>

<div class="safety-standards-info">

  <% if items.any? %>
    <% items.each do |item| %>
      <%= item %><br>
    <% end %>
  <% end %>

  <% if local_assigns[:content] %>
    <%= capture(&content) %>
  <% end %>
</div>
