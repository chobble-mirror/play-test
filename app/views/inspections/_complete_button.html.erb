<%# Completion button for inspections - available on all tabs %>
<% if inspection && !inspection.new_record? && !inspection.complete? %>
  <section class="inspection-complete-action">
    <%= button_to t('inspections.buttons.mark_complete'),
        complete_inspection_path(inspection),
        method: :patch,
        data: { turbo_confirm: t('inspections.messages.mark_complete_confirm') } %>
  </section>
<% end %>