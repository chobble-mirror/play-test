<%= render 'form/form_context', model: @inspection.enclosed_assessment, i18n_base: 'forms.enclosed', url: inspection_enclosed_assessment_path(@inspection) do |form| %>
  <%= render 'form/fieldset', legend_key: 'exit_requirements' do %>
    <%= render 'form/number_pass_fail_comment', field: :exit_number %>
    <%= render 'form/pass_fail_comment', field: :exit_sign_always_visible_pass %>
  <% end %>

  <!-- Safety Status -->
  <%= render 'form/assessment_status', assessment: @inspection.enclosed_assessment %>
<% end %>
