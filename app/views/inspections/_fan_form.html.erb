<%= render 'form/form_context', model: @inspection.fan_assessment, i18n_base: 'forms.fan', url: inspection_fan_assessment_path(@inspection) do |form| %>
  <%= render 'form/fieldset', legend_key: 'fan_assessment' do %>
    <%= render 'form/text_field', field: :fan_size_type %>
    <%= render 'form/text_field', field: :blower_serial %>
    <%= render 'form/pass_fail_comment', field: :blower_serial_pass %>
    <%= render 'form/pass_fail_comment', field: :blower_flap_pass %>
    <%= render 'form/pass_fail_comment', field: :blower_finger_pass %>
    <%= render 'form/pass_fail_comment', field: :pat_pass %>
    <%= render 'form/pass_fail_comment', field: :blower_visual_pass %>
  <% end %>
  
  <!-- Safety Status -->
  <%= render 'form/assessment_status', assessment: @inspection.fan_assessment %>
<% end %>
