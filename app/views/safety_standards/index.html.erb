        <p><em>Source: app/models/safety_standard.rb</em></p>
      </div>
    </details>

    <div class="calculator-form">
      <h4><%= t('safety_standards.calculators.user_capacity.title') %></h4>
      <%= form_with url: safety_standards_path, method: :post, local: false do |form| %>
        <%= form.hidden_field "calculation[type]", value: "user_capacity" %>
        <div class="form-group">
          <%= form.label "calculation[length]", t('safety_standards.calculators.user_capacity.length_label') %>
          <%= form.number_field "calculation[length]", step: 0.1, min: 0.1, value: params.dig(:calculation, :length), placeholder: t('safety_standards.calculators.user_capacity.length_placeholder') %>
