      <div class="source-code">
        <h4>Method: <%= wall_height_metadata[:method_name] %></h4>
        <pre><code class="ruby"><%= SafetyStandard.get_method_source(wall_height_metadata[:method_name]) %></code></pre>
        <p><em>Source: app/models/safety_standard.rb</em></p>
      </div>
    </details>

    <!-- Interactive Calculator -->
    <div class="calculator-form">
      <h4><%= t('safety_standards.calculators.wall_height.title') %></h4>
      <%= form_with url: safety_standards_path, method: :post, local: false do |form| %>
        <%= form.hidden_field "calculation[type]", value: "wall_height" %>
        <div class="form-group">
          <%= form.label "calculation[user_height]", t('safety_standards.calculators.wall_height.user_height_label') %>
          <%= form.number_field "calculation[user_height]", step: 0.1, min: 0.1, value: params.dig(:calculation, :user_height), placeholder: t('safety_standards.calculators.wall_height.user_height_placeholder') %>
        </div>
        <%= form.submit t('safety_standards.calculators.wall_height.submit'), class: "button" %>
      <% end %>

      <div id="wall-height-result">
        <% if @wall_height_result %>
          <div class="calculation-result">
            <h5><%= t('safety_standards.calculators.wall_height.result_title') %></h5>
            <p><strong><%= t('safety_standards.calculators.wall_height.user_height_result') %></strong> <%= @wall_height_result[:user_height] %>m</p>
            <p><strong><%= t('safety_standards.calculators.wall_height.requirement_result') %></strong> <%= @wall_height_result[:requirement] %></p>
