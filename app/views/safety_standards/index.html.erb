            <h5><%= t('safety_standards.calculators.runout.result_title') %></h5>
            <p><strong><%= t('safety_standards.calculators.runout.platform_height_result') %></strong> <%= @runout_result[:platform_height] %>m</p>
            <p><strong><%= t('safety_standards.calculators.runout.required_runout_result') %></strong> <%= @runout_result[:required_runout] %>m</p>
