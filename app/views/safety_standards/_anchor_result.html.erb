<% if @anchor_result %>
  <%= render 'result_with_breakdown',
    result_label: t('safety_standards.calculators.anchor.required_result'),
    result: @anchor_result %>
<% elsif @anchor_error %>
  <div class="error">
    <p><strong><%= t('shared.error') %>:</strong> <%= @anchor_error %></p>
  </div>
<% end %>