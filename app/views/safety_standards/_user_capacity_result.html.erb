<% if @capacity_result || @capacity_error %>
  <div class="calculation-result">
    <h3><%= t('forms.safety_standards_user_capacity.sections.result') %></h3>
    
    <% if @capacity_error %>
      <p class="error"><%= @capacity_error %></p>
    <% elsif @capacity_result %>
      <% if @capacity_result.breakdown %>
        <h4>Calculation Breakdown:</h4>
        <table>
          <tbody>
            <% @capacity_result.breakdown.each do |label, value| %>
              <tr>
                <th><%= label %>:</th>
                <td><%= value %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="error"><%= t('safety_standards.errors.calculation_failed') %></p>
      <% end %>
    <% end %>
  </div>
<% end %>